@model PagedList.PagedList<WebBanRauCuQua.Models.EF.News>
@using PagedList.Mvc
@using PagedList
@{
    ViewBag.Title = "Tin tức";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<style>
    .news_selection_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }

    .pagination-row {
        margin-top: 20px;
        display: flex;
        justify-content: center;
    }

        .pagination-row .pagination {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
        }

            .pagination-row .pagination li {
                margin: 0 5px;
            }

                .pagination-row .pagination li a {
                    color: #c31919;
                    text-decoration: none;
                    padding: 5px 10px;
                    border: 1px solid #ccc;
                    border-radius: 3px;
                }

                .pagination-row .pagination li.active a {
                    background-color: #c31919;
                    color: #fff;
                    border-color: #333;
                }
</style>

<div class="container news_selection_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news">Tin tức</h1>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row row-item-new">
                <div class="col-md-3">
                    <div class="img-box">
                        <a href="" title="@item.Title"><img src="@item.Image" alt="@item.Title" /></a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="content-box">
                        <h3><a href="/chi-tiet-tin-tuc/@item.Alias-@item.Id" title="@item.Title">@item.Title</a></h3>
                        <div class="description-box">
                            @item.Description
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row pagination-row">
            <div class="col-6"></div>
            <div class="col-6" style="text-align:right;">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    }
</div>