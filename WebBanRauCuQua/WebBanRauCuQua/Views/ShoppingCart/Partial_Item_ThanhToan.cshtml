@model IEnumerable<WebBanRauCuQua.Models.ShoppingCartItem>
@using WebBanRauCuQua.Common

@if (Model != null && Model.Any())
{
    <h3>Giỏ hàng <span style="float: right"><small>@Model.Count()</small></span></h3>
    var i = 1;
    var tongtien = decimal.Zero;

    <div style="border:2px solid #808080">
        <table class="table">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Thành tiền</th>
            </tr>

            @foreach (var item in Model)
            {
                tongtien += item.TotalPrice;
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@Common.FormatNumber(item.Price, 0)</td>
                    <td>@Common.FormatNumber(item.TotalPrice, 0)</td>
                </tr>
            }
            <tr>
                <td>Tổng tiền</td>
                <td></td>
                <td></td>
                <td>@Common.FormatNumber(tongtien, 0)</td>
            </tr>
        </table>
    </div>
}
else
{
}